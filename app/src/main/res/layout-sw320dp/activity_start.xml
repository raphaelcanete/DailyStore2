<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".StartActivity">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:src="@drawable/locationvector" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_marginLeft="-20dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        android:text="Find supermarkets near you"
        android:textSize="20sp"
        android:textColor="@color/bluenights"
        />
    <TextView
        android:layout_width="250dp"
        android:layout_marginLeft="-20dp"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/starttext"
        android:textSize="16sp"
        android:textColor="@color/bluenights"
        />

    <Button
        android:id="@+id/btn_locationAccess"
        android:layout_width="300dp"
        android:textAllCaps="false"
        android:layout_marginTop="50dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:textSize="16sp"
        android:text="Allow Location Access"
        android:background="@drawable/btn_sign"/>
<TextView
    android:id="@+id/btn_enterLocation"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginTop="13dp"
    android:textSize="16sp"
    android:textStyle="bold"
    android:textColor="@color/alizarin"
    android:text="Enter my location"
    />
</LinearLayout>